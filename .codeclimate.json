{
  "version": "2",
  "plugins": {
    "swiftlint": {
      "enabled": true
    },
    "bundler-audit": {
      "enabled": true
    },
    "shellcheck": {
      "enabled": true
    }
  },
  "exclude_patterns": [
    "Carthage/",
    "pods/",
    "docs/",
    "fastlane/",
    "Tests/",
    "Templates/"
  ],
  "checks": {
    "identical-code": {
      "config": {
        "threshold": 25
      }
    },
    "file-lines": {
      "config": {
        "threshold": 1000
      }
    },
    "similar-code": {
      "config": {
        "threshold": 50
      }
    },
    "duplication": {
      "config": {
        "languages": {
          "swift": {
            "mass_threshold": 25
          }
        }
      }
    }
  }
}
